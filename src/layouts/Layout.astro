---
import inter400 from "@fontsource/inter/files/inter-latin-400-normal.woff2?url";
import poppins700 from "@fontsource/poppins/files/poppins-latin-700-normal.woff2?url";
import poppins900 from "@fontsource/poppins/files/poppins-latin-900-normal.woff2?url";
import manrope600 from "@fontsource/manrope/files/manrope-latin-600-normal.woff2?url";

import "@fontsource/poppins/700.css";
import "@fontsource/poppins/900.css";
import "@fontsource/inter/400.css";
import "@fontsource/manrope/600.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="¿Buscas dentista en [Tu Ciudad]? En [Nombre de la Clínica] ofrecemos odontología avanzada con tecnología de vanguardia para 2026. Expertos en implantes, ortodoncia e higiene dental. ¡Reserva tu cita hoy!"
    />
    <link
      rel="preload"
      href={inter400}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={poppins700}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={poppins900}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={manrope600}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <title>DentalCare</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
